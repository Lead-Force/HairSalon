/**
 *
 * @author Jean
 */

public class LoginServletHairdresserDB extends HttpServlet {
    protected void processRequest(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        response.setContentType("text/html;charset=UTF-8");
        try (PrintWriter out = response.getWriter()) {

            String id, pw, pwdb;
            id = request.getParameter("idtb");
            pw = request.getParameter("pwtb");
            pwdb = null;
            System.out.println(" ID: " + id + " PW: " + pw);
            try{
                // Load the driver
                Class.forName("net.ucanaccess.jdbc.UcanaccessDriver");
                
                // Get the connection
                Connection con = DriverManager.getConnection("jdbc:ucanaccess://" + 
                "C:\\Users\\Jean\\Desktop\\HairSalon\\db.accdb");
                
                // Create statement
                Statement stmt = con.createStatement();
                
                // Execute Statement
                ResultSet rs;
                rs = stmt.executeQuery("select * from Hairdresser where HairdresserId='" + id + "'");
                
                // Process data
                while(rs!=null && rs.next()){
                    pwdb = rs.getString(1);
                    System.out.println("ID: " + rs.getString("HairdresserId") + " Password: " + rs.getString(1)+" ");
                    System.out.println("---------------------------");

                }
                
                //Close the connection
                con.close();
                
            }  catch (ClassNotFoundException ex) {
                Logger.getLogger(LoginServletHairdresserDB.class.getName()).log(Level.SEVERE, null, ex);
            } catch (SQLException ex) {
                Logger.getLogger(LoginServletHairdresserDB.class.getName()).log(Level.SEVERE, null, ex);
            }
            if (pw.equals(pwdb)){
            out.println("<!DOCTYPE html>");
            out.println("<html>");
            out.println("<head>");
            out.println("<title>Servlet LoginServletHairdresserDB</title>");            
            out.println("</head>");
            out.println("<body>");
            out.println("<h1>Valid Servlet LoginServletHairdresserDB at " + request.getContextPath() + "</h1>");
            out.println("</body>");
            out.println("</html>");
            response.sendRedirect("HairdresserLanding.jsp");
        }
            else{
            out.println("<!DOCTYPE html>");
            out.println("<html>");
            out.println("<head>");
            out.println("<title>Servlet LoginServletHairdresserDB</title>");            
            out.println("</head>");
            out.println("<body>");
            out.println("<h1>Invalid Servlet LoginServletHairdresserDB at " + request.getContextPath() + "</h1>");
            //out.println(a);
            //out.println(b);
            out.println("</body>");
            out.println("</html>");
            response.sendRedirect("login.jsp");
            }
        }
    }
}
